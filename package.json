  "scripts": {
    "docker:build": "docker build -t trading_platform_backend docker",
    "docker:run": "docker run -it -v C:/Users/Alcir/Desktop/projects/trading_platform:/app trading_platform_backend bash",
    "compose:up": "docker compose -f  docker/docker-compose.yaml up -d --build",
